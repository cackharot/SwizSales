                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" FontWeight="Bold" Text="Barcode" Foreground="{StaticResource BorderBrushSelected}" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="1" FontWeight="Bold" Text="Name" Foreground="{StaticResource BorderBrushSelected}" />
                        <TextBlock Grid.Column="2" FontWeight="Bold" Text="Quantity" HorizontalAlignment="Right" Foreground="{StaticResource BorderBrushSelected}"/>
                        <TextBlock Grid.Column="3" FontWeight="Bold" Text="MRP"  HorizontalAlignment="Right" Foreground="{StaticResource BorderBrushSelected}"/>
                        <TextBlock Grid.Column="4" FontWeight="Bold" Text="Discount"  HorizontalAlignment="Right" Foreground="{StaticResource BorderBrushSelected}"/>
